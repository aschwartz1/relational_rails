<h1><%= @manufacturer.name %> Discs</h1>
<br>
<%= form_with url: "/manufacturers/#{@manufacturer.id}/discs", method: :get, local: true do |form| %>
  <%= form.label(:filter_max_weight, 'Show only max weight above: ') %>
  <%= form.text_field(:filter_max_weight) %>
  <%= form.submit('Filter') %>
<% end %>

<%= link_to 'Sort Alphabetically', "/manufacturers/#{@manufacturer.id}/discs?sort=true" %>

<% @discs.each do |disc| %>
  <h3><a class='disc_link' href="/discs/<%= disc.id %>"><%= disc.name %></a>
    - <span class="less-header"><%= link_to 'Edit', "/discs/#{disc.id}/edit", class: 'disc-edit' %></span>
  </h3>
  <ul>
    <li>ID: <%= disc.id %></li>
    <li>Max Weight: <%= disc.max_weight %></li>
    <li>In Production?: <%= disc.in_production %></li>
    <li>Record Created At: <%= disc.created_at %></li>
    <li>Record Last Updated At: <%= disc.updated_at %></li>
  </ul>
  <%= button_to 'Delete', "/discs/#{disc.id}", method: :delete, class: 'disc-delete' %>
  <hr>
<% end %>

<p><a href="/manufacturers/<%= @manufacturer.id %>/discs/new">Create Disc</a></p>
