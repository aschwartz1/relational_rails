<form action="/manufacturers/<%= @manufacturer.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH">
  <label for="form_name">Name: </label>
  <input type="text" name="manufacturer[name]" id="form_name" value="<%= @manufacturer.name %>"><br>
  <label for="form_founded_in">Year Founded: </label>
  <input type="number" name="manufacturer[founded_in]" id= "form_founded_in" min="1900" max="<%= Date.today.year %>" value="<%= @manufacturer.founded_in %>"><br>
  <input type="checkbox" name="manufacturer[in_business]" id="form_in_business" <% if @manufacturer.in_business %>checked<% end %>>
  <label for="form_in_business"> Currently in business?</label><br>
  <button name="submit" type="submit">Update Manufacturer</button>
</form>
